<!doctype html>
<html>
<head>
  <title>SFIC Lock Shop</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
	<div class="topbar">
		<div class="fill">
			<div class="container">
				<h3>
					<%= link_to 'SFIC Lockshop', '/' %>
				</h3>
				<ul>
					<li class>
						<%= link_to 'Keys', keys_path %>
					</li>
										<li class>
						<%= link_to 'Cores', cores_path %>
					</li>
					<li class>
						<%= link_to 'Keyways', keyways_path %>
					</li>
					<li class>
						<%= link_to 'Key Types', keytypes_path %>
					</li>
					<li class>
						<% if user_signed_in? %>
							<%= link_to "Sign out", destroy_user_session_path %>
						<% else %>
							<%= link_to "Sign in", new_user_session_path %>
						<% end %>
					</li>
				</ul>
			</div>
		</div>
	</div>
	<div id="topspace"></div>
	<div class="container">
		<% flash.each do |name, msg| %>
			<div class="row">
				<%= content_tag :div, msg, :class => "alert-message #{name}" %>
			</div>
		<% end %>
		<%= yield %>
	</div>
	<div id="footer">
      <div class="inner">
        <div class="container">
          <p>
            Designed and built by Jared Szechy.<br />
            Licensed under the <a href="http://www.gnu.org/licenses/gpl-3.0.html" target="_blank">GPL v3.0</a>.
          </p>
        </div>
      </div>
    </div>
</body>
</html>
